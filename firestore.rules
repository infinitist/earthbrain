rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // RSVP Records: Public can write, only Admin can read
    match /rsvps/{rsvp} {
      allow write: if true;
      allow read: if request.auth != null;
    }
    
    // Memories: Public can write and read approved ones, only Admin can read/delete all
    match /earthbrain_memories/{memory} {
      allow write: if true;
      allow read: if resource.data.approved == true || request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Charities: Public can read, only Admin can write
    match /earthbrain_charities/{charity} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Charity Suggestions: Public can write, only Admin can read
    match /earthbrain_charity_suggestions/{suggestion} {
      allow write: if true;
      allow read: if request.auth != null;
    }

    // Community Wall: Authenticated users can read and write
    match /earthbrain_posts/{post} {
      allow read, write: if request.auth != null;
    }

    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
